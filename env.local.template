# Local Development Environment Configuration Template
# ===================================================
# Copy this file to .env.local for your personal local setup
# This is for individual developer preferences

# Database - Local with different database name to avoid conflicts
MONGODB_URI=mongodb://localhost:27017/faez-khalas-portfolio-local
DB_NAME=faez-khalas-portfolio-local

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Settings (Local development)
JWT_SECRET=local-dev-jwt-secret-change-if-needed
JWT_EXPIRES_IN=30d

# Admin Credentials (Local development)
ADMIN_EMAIL=developer@localhost.com
ADMIN_PASSWORD=dev123

# File Upload Settings
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# CORS - Local development with common ports
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:5173,http://127.0.0.1:8080

# Development Flags
DEBUG=true
LOG_LEVEL=debug
VERBOSE_LOGGING=true

# Rate Limiting (Very lenient for local dev)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10000

# Local Development Features
ENABLE_DEV_ROUTES=true
SKIP_AUTH_IN_DEV=false
AUTO_SEED_DATA=false 