# Production Environment Configuration Template
# =============================================
# Copy this file to .env.production for deployment

# Database - Use MongoDB Atlas or your production MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/faez-khalas-portfolio?retryWrites=true&w=majority
DB_NAME=faez-khalas-portfolio

# Server Configuration
PORT=5000
NODE_ENV=production

# JWT Security - IMPORTANT: Change these in production!
JWT_SECRET=your-production-jwt-secret-key-must-be-very-strong-and-secure-change-this-immediately
JWT_EXPIRES_IN=24h

# Admin Credentials - IMPORTANT: Change these before deployment!
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=strong-production-password-change-this

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# CORS - Add your production domains
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://api.yourdomain.com

# Security Settings
TRUST_PROXY=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=error

# Additional Production Settings
ENABLE_COMPRESSION=true
SECURE_COOKIES=true 